<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Weather Location">
        <SwitchPreference
            android:key="USE_DEVICE_LOCATION"
            android:title="Use device location"
            android:summary="Allow application to get your location"
            android:defaultValue="true"
            android:disableDependentsState="true"/>

        <EditTextPreference
            android:key="CUSTOM_LOCATION"
            android:title="Location"
            android:summary="Enter your custom location"
            android:defaultValue="Jakarta"
            android:dependency="USE_DEVICE_LOCATION"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Units">

        <ListPreference
            android:title="Units"
            android:key="UNIT_SYSTEM"
            android:summary="%s"
            android:defaultValue="METRIC"
            android:entries="@array/unit_system_entries"
            android:entryValues="@array/unit_system_value"/>


    </PreferenceCategory>
</PreferenceScreen>